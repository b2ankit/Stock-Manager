<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Chart CDN link -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!--Link Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  </head>
  <body>
      <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="#" style="color: white;"><div class="head1">Om Construction</div></a>
            </div>
            <ul class="nav navbar-nav">
              <li><a href="/">Home</a></li>
              <li><a href="/records">Records</a></li>
              <li><a href="/Stocks">Stocks Available</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <!-- <li style="padding-right: 20px;"><a href="/login" style="color: #5bc0de;"><span class="glyphicon glyphicon-log-in" style="color:#5bc0de"></span> Login</a></li> -->

                <%if(username!=null){%>
                  <li style="padding-right: 20px;" class="drop"><a href="/signup" class="dropdown-toggle" data-toggle="dropdown" style="color: #5bc0de;"><span class="glyphicon glyphicon-user" style="color: #5bc0de;" ></span> <%=username%></a>
                    <ul class="dropdown-menu">
                      <li><a href="/insert">Insert Records</a></li>
                      <li><a href="/show">Show Records</a></li>
                      <li><a href="/logout">Logout</a></li>
                    </ul>
                  </li>
                  <%}%>
                  <%if(username==null){%>
                    <li style="padding-right: 20px;"><a href="/login" style="color: #5bc0de;"><span class="glyphicon glyphicon-log-in" style="color:#5bc0de"></span> Login</a></li>
                  <%}%>

                  <form class="navbar-form navbar-left" action="/search" method="post">
                    <div class="form-group">
                      <input type="text" class="form-control" placeholder="Enter Cement Name" name="name">
                    </div>
                    <button type="submit" value="search" class="btn btn-success">Search</button>
                  </form>
            </ul>
          </div>
      </nav>

      <div class="container" style="margin-top: 5vh;">
            <table class="table table-striped table-bordered table-hover" style="text-align: center;">
              <thead">
                <tr  style="background-color: rgb(36, 31, 31); color: white; ">
                  <th style="text-align: center; padding: 10px;">Cement Name</th>
                  <th style="text-align: center; padding: 10px;">Month</th> 
                  <th style="text-align: center; padding: 10px;">Quantity</th>
                  <th style="text-align: center; padding: 10px;">Date</th>
                  <th style="text-align: center; padding: 10px;">Status</th> 
                  
                  <th style="text-align: center; padding: 10px;">Action</th>
                </tr>
              </thead>
              <tbody>
                  <% records.forEach(function(row) {%>
                    <tr>
                      
                      <td><%= row.cementName%></td>
                      <td><%=row.month%></td>
                      <td><%= row.quantity%></td>
                      <td><%=row.date%></td>
                      
                      <td><%=row.category%></td>
                      <td><a class="btn btn-primary btn-xs" href="/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                      <a class="btn btn-danger btn-xs" href="/delete/<%= row._id %>"><i class="fa fa-trash"></i></a></td>
                    </tr>
                   
                <%})%>
              </tbody>
            </table>
            
          </div>






     
  </body>
</html>
